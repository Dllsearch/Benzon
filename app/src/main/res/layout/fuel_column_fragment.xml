<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.company.benzon.benzon.views.FuelTypeView
        android:id="@+id/fuel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fuel_type_label" />

    <com.company.benzon.benzon.views.FuelTypeView
        android:id="@+id/fuel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fuel1"/>

    <com.company.benzon.benzon.views.FuelTypeView
        android:id="@+id/fuel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fuel2"/>

    <com.company.benzon.benzon.views.FuelTypeView
        android:id="@+id/fuel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fuel3"/>
</android.support.constraint.ConstraintLayout>