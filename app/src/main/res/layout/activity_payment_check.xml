<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".PaymentCheckActivity">

    <TextView
        android:id="@+id/customer_label"
        android:text="Покупатель:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/customer"
        android:text="Иван Иванов"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@id/customer_label"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/fuel_type_label"
        android:text="Топливо:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/customer_label"/>
    <TextView
        android:id="@+id/fuel_type"
        android:text="ДТ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@id/fuel_type_label"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/cost_label"
        android:text="Цена:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/fuel_type_label"/>
    <TextView
        android:id="@+id/cost"
        android:text="38.50"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/cost_label"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/volume_label"
        android:text="Объем:"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cost_label"/>
    <TextView
        android:id="@+id/volume"
        android:text="20 Л"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/volume_label"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/price_label"
        android:text="Стоимость:"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/volume_label"/>
    <TextView
        android:id="@+id/price"
        android:text="770 Р"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/price_label"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/date_label"
        android:text="Дата:"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/price_label"/>
    <TextView
        android:id="@+id/date"
        android:text="20.01.19"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/date_label"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/time_label"
        android:text="Время:"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_label"/>
    <TextView
        android:id="@+id/time"
        android:text="20:24:38"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/time_label"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/ok_button"
        android:text="ок"
        android:textSize="25sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/time_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</android.support.constraint.ConstraintLayout>